@{
}
@model CrudASP.Models.Empleado;
<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2>Editar Empleado</h2>
        <form method="post" asp-controller="Empleado" asp-action="Editar">
            <input type="hidden" asp-for="IdEmpleado" />
            <div class="mb-3">
                <label>Nombre Completo</label>
                <input type="text" class="form-control" asp-for="Nombre" />
            </div>
            <div class="mb-3">
                <label>Email</label>
                <input type="text" class="form-control" asp-for="Email" />
            </div>
            <div class="mb-3">
                <label>Fecha Contrato</label>
                <input type="date" class="form-control" asp-for="FechaContrato" />
            </div>
            <div class="mb-3">
                <input type="checkbox" class="form-check-input" asp-for="Estado" id="chkEstado" />
                <label class="form-check-label" for="chkEstado">Estado</label>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a asp-controller="Empleado" asp-action="Lista" class="btn btn-warning">Volver</a>
            </div>
        </form>
    </div>
</div>
